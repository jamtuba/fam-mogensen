<div class="card text-center">
    <div class="card-body">
        <img src="@ImageSrc" style="max-height: @ImageHeight; width: auto;" />
    </div>
</div>

@code{
    [Parameter]
    public string ImageHeight { get; set; } = "480px";

    [Parameter]
    public string ImageSrc { get; set; } = "https://www.publicdomainpictures.net/pictures/280000/velka/not-found-image-15383864787lu.jpg";
}